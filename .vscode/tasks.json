{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start server",
            "type": "shell",
            "command": "symfony server:start --no-tls"
        },
        {
            "label": "compile assets",
            "type": "shell",
            "command": "APP_ENV=dev APP_DEBUG=1 APP_ID=kantine php bin/console asset-map:compile",
            "problemMatcher": []
        },
        {
            "label": "make migrations",
            "type": "shell",
            "command": "APP_ENV=dev APP_DEBUG=1 APP_ID=kantine php bin/console make:migration",
            "problemMatcher": []
        },
        {
            "label": "migrate",
            "type": "shell",
            "command": "APP_ENV=dev APP_DEBUG=1 APP_ID=kantine php bin/console doctrine:migrations:migrate",
            "problemMatcher": [],
            "dependsOn": "make migrations"
        },
        {
            "label": "extract translations",
            "type": "shell",
            "command": "APP_ENV=dev APP_DEBUG=1 APP_ID=kantine php bin/console translation:extract --force de",
            "problemMatcher": [],
        },
        {
            "label": "clear cache",
            "type": "shell",
            "command": "APP_ENV=dev APP_DEBUG=1 APP_ID=kantine php bin/console cache:clear && APP_ENV=prod APP_DEBUG=0 php bin/console cache:clear && ",
            "problemMatcher": [],
        },
    ]
}
